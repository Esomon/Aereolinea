@model aereolinia.Models.Vuelos

@{
    ViewData["Title"] = "Create";
}

        <div class="card">
            <h3 class="card-header font-weight-bold text-uppercase py-4  text-center">
                Ingrese los datos del vuelo
            </h3>

        </div>
        <br />

        <hr />

        <div class="row">
            <div class="col-md-4">

                <form asp-action="Create">
                    <div class="form-row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group col-md-10">
                            <label asp-for="Cinty" class="control-label"></label>
                            <input asp-for="Cinty" class="form-control" />
                            <span asp-validation-for="Cinty" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-10">
                            <label asp-for="Fecha" class="control-label"></label>
                            <input asp-for="Fecha" class="form-control" />
                            <span asp-validation-for="Fecha" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-10">
                            <label asp-for="Aerolinea" class="control-label"></label>
                            <input asp-for="Aerolinea" class="form-control" />
                            <span asp-validation-for="Aerolinea" class="text-danger"></span>
                        </div>
                    </div>

                    <a type="button" class="btn btn-success" asp-action="Index">Volver atras </a> |
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </form>
            </div>
        </div>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
