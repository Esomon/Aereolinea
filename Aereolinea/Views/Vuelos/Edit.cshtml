@model aereolinia.Models.Vuelos

@{
    ViewData["Title"] = "Edit";
}

<span style="font-size:20px; text-align:center; ">
    <dt class="list-group-item active">
        Editar el vuelo
    </dt>
</span>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VuelosID" />
            <div class="form-group">
                <label asp-for="Cinty" class="control-label"></label>
                <input asp-for="Cinty" class="form-control" />
                <span asp-validation-for="Cinty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aerolinea" class="control-label"></label>
                <input asp-for="Aerolinea" class="form-control" />
                <span asp-validation-for="Aerolinea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a type="button" class="btn btn-success" asp-action="Index">Cancelar</a> |
                <input type="submit" value="Guardar" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
