@model aereolinia.Models.Vuelos

@{
    ViewData["Title"] = "Delete";
}

<br />
<h3>¿Esta seguro de eliminar este vuelo?</h3>

<div>
    <h4>Vuelos</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cinty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cinty)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Aerolinea)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Aerolinea)
        </dd>

    <form asp-action="Delete">
        <input type="hidden" asp-for="VuelosID" />
        <a type="button" class="btn btn-success" asp-action="Index">Cancelar</a> |
        <input type="submit" value="Eliminar" class="btn btn-danger" />
    </form>
</div>
