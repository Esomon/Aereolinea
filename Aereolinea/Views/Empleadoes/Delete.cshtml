@model aereolinia.Models.Empleado

@{
    ViewData["Title"] = "Delete";
}

<br />
<h3>¿Esta seguro de eliminar este empleado?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TypeEmpleado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TypeEmpleado.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Last_Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Last_Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EmpleadoID" />
        <a type="button" class="btn btn-success" asp-action="Index">Cancelar</a> |
        <input type="submit" value="Eliminar" class="btn btn-danger" />
    </form>
</div>
